# Local/private config goes in the include
[include]
	path = ~/.config/git/user

[include]
  path = ~/.config/git/micrantha

[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = bat -p

# From there, sections are in alphabetic order

[alias]
  co = checkout
  last = log -1 HEAD
  st = status
  uncommit = reset --soft HEAD~
  unstage = reset HEAD --
  lg = log --graph --abbrev-commit --decorate --date=relative --all

[credential]
  helper = cache --timeout=3600

[difftool]
  prompt = false

[gui]
  # Remove `git gui` pop-up warning
  gcwarning = false

[help]
  autocorrect = 1

[mergetool]
  keepBackup = false
	prompt = false

[merge]
	tool = vimdiff
  conflictstyle = diff3

[mergetool "meld"]
  cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[pager]
  diff = bat -p
  show = bat -p

[pull]
  rebase = true

[push]
  default = simple

[rebase]
  autoStash = true

[sequence]
  editor = vim

[user]
  useConfigOnly = true

[init]
  defaultBranch = main
  templateDir = ~/.config/git/templates

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  required = true

[sendemail]
  annotate = yes
